{
  "compileOnSave": false,
  "compilerOptions": {
      "target": "es2016",
      "module": "commonjs",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true
  },
  "exclude": [
      "node_modules"
  ],
  "filesGlob": [
      "src/**/*.ts",
      "test/**/*.ts",
      "typings/index.d.ts"
  ]
}